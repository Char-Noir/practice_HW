@model HW78.Dto.Request.ExpenseDtoRequest

@{
    ViewData["Title"] = "Edit";

    var id = Context.Request.Query["id"];
}

<h1>Edit</h1>

<h4>Expense</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" />
            <div class="form-group">
                <label asp-for="CostExpense" class="control-label"></label>
                <input asp-for="CostExpense" class="form-control" />
                <span asp-validation-for="CostExpense" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Commentary" class="control-label"></label>
                <input asp-for="Commentary" class="form-control" />
                <span asp-validation-for="Commentary" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FkCategory" class="control-label"></label>
                @Html.DropDownList("FkCategory","Choose category");
                <span asp-validation-for="FkCategory" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IsVisible" class="control-label"></label>
               
                @Html.CheckBoxFor(m => m.IsVisible)
                <span asp-validation-for="IsVisible" class="text-danger"></span>
                <span>
                    <br />
                    <small>
                        <i>
                            This value allows you to hide or show this expense in reports.<br /> <span style="color:lightseagreen">Enabled</span> - displayed. <span style="color:lightseagreen">Disabled</span> - not displayed.
                        </i>
                    </small>
                </span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
