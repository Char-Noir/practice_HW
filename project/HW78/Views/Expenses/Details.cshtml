@model HW78.Dto.Response.ExpenseDtoResponse

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Expense</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
           
                @Html.DisplayNameFor(model => model.CategoryName)
            
        </dt>
        <dd class="col-sm-10">
             <a asp-action="Details" asp-controller="Categories" asp-route-id="@Model.CategoryId">
            @Html.DisplayFor(model => model.CategoryName)
            </a>
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DateTime)
        </dt>
        <dd class="col-sm-10">
            @Model.DateTime.ToString("f")
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CostExpense)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CostExpense)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Commentary)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Commentary)
        </dd>

        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.IsVisible)
            <span>
                <br />
                <small>
                    <i>
                        This value allows you to hide or show this expense in reports.<br /> <span style="color:lightseagreen">Enabled</span> - displayed. <span style="color:lightseagreen">Disabled</span> - not displayed.
                    </i>
                </small>
            </span>
           
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IsVisible)
        </dd>

    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.IdExpense">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
