@model (DateTime, DateTime)

@{
    ViewData["Title"] = "Report";
}
<form method="get" asp-action="Index" asp-controller="Reports">
	<input type="datetime-local" value="@Model.Item1.ToString("O").Substring(0,16)" name="firstMonth" id="firstMonth">
	<input type="datetime-local" value="@Model.Item2.ToString("O").Substring(0,16)" name="secondMonth" id="secondMonth">
	<input type="submit" value="Search" />
</form>


<script>
	window.onload = function () {

		var chart = new CanvasJS.Chart("chartContainer", {
			animationEnabled: true,
			theme: "light2", // "light1", "dark1", "dark2"
			exportEnabled: true,
			title: {
				text: "Expenses by month"
			},
			data: [{
				type: "column",
				dataPoints: @Html.Raw(ViewBag.DataPoints)
		}]
		});
		chart.render();

	}
</script>
<div id="chartContainer" style="height: 370px; width: 100%;"></div>
<script src="https://cdn.canvasjs.com/canvasjs.min.js"></script>